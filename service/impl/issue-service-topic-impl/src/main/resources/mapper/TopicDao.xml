<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.issue.dao.TopicDao">

    <select id="findById" resultType="com.duan.issue.common.entity.Topic">
    SELECT a.id, a.status, a.title, a.notes, a.`like`,a.dislike,a.insert_time
        FROM topic a
        WHERE a.id = #{value}
    </select>

    <select id="find" resultType="com.duan.issue.common.entity.Topic">
    SELECT a.id, a.status, a.title, a.notes, a.`like`,a.dislike,a.insert_time
        FROM topic a
    </select>

    <update id="update" parameterType="com.duan.issue.common.entity.Topic">
        UPDATE topic
        <set>
            <if test="status != null">
                status=#{status},
            </if>
            <if test="title != null">
                title=#{title},
            </if>
            <if test="notes != null">
                notes=#{notes},
            </if>
            <if test="like != null">
                `like`=#{like},
            </if>
            <if test="dislike != null">
                dislike=#{dislike},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <insert id="insert" parameterType="com.duan.issue.common.entity.Topic" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO topic (status, title, notes,`like`,dislike)
        VALUE (#{status}, #{title}, #{notes},#{like},#{dislike})
    </insert>

    <delete id="delete">
        DELETE
        FROM topic
        WHERE id = #{value}
    </delete>

</mapper>